<div class="slider-out-bg"></div>
<div class="slide-out">
  {{#link-to "author.detail" model.id class="btn-back"}}
  <span class="sr-only">Back</span>
  {{/link-to}}

  <div class="slide-out-heading">
    <div class="title">
      <h3>Edit {{model.last}}, {{model.first}}</h3>
    </div>
  </div>

  <div class="slide-out-content">
    <AuthorForm @author={{ model }} @onsubmit={{ action "saveAuthor"}} />
  </div>
</div>